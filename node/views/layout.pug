html
    head
        if title
            title= `${title} | ${helpers.siteName}`
        else
            title= `${helpers.siteName}`
        link(rel='stylesheet', href='/current.css')
        link(rel='stylesheet', href='/local.css')
        //-link(rel="shortcut icon" type="image/png" href="/images/icons/doughnut.png")
        meta(name="viewport" content="width=device-width, initial-scale=1")

    body
        //-pre= helpers.dump(helpers)
        header.site-header
            .wrapper
                a.site-title(href="/index.htm") Story Marmalade
                nav.site-nav
                    .trigger
                        a.page-link(href="/about.htm") About

        main.page-content
            .wrapper
                block content

        block footer
            footer.site-footer
                .wrapper
                    .footer-col-wrapper
                        .footer-col.footer-col-1
                            ul.contact-list
                                li 
                                    a(href="mailto:hello@storymarmalade.com") hello@storymarmalade.com                                
                        .footer-col.footer-col-2
                            ul.social-media-list
                                li 
                                    a(href="https://twitter.com/storymarmalade") twitter: storymarmalade
                                li (c) Story Marmalade
                        .footer-col.footer-col-3
                            p Got a minute? We have 
                                a(href="/about.htm") five hundred words
